@using innovateKUYS.Models.ViewsModels;
 @using innovateKUYS.Models.ViewsModels.StudentVM
@model StudentViewModel
@{
    ViewData["Title"] = "Öğrenciler Ekle";
}
<div class="row mb-4">
    <div class="col">
      @*  <a class="btn btn-primary btn-sm" asp-action="Create"><i class="fa fa-plus mr-2"></i>Öğrenci Ekle</a>*@
    </div>
</div>

<div class="row mb-4">
    <div class="col">
                  <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <form method="post" asp-action="Create">
          <div class="from-group">
              <label for="FirstName" class="font-weight-bold small">Öğrenci Ad</label>
              <input type="text" class="form-control" id="FirstName" placeholder="Öğrenci Adı" asp-for="FirstName"/>
              <span asp-validation-for="FirstName" class="text-danger small"></span>
          </div>
          <div class="from-group">
              <label for="LastName" class="font-weight-bold small">Öğrenci Soyad</label>
              <input type="text" class="form-control" id="LastName" placeholder="Öğrenci Soyadı" asp-for="LastName"/>
             <span asp-validation-for="LastName" class="text-danger small"></span>

          </div>
           <div class="from-group">
              <label for="StudentCode" class="font-weight-bold small">Öğrenci Numarası</label>
              <input type="text" class="form-control" id="StudentCode" placeholder="Öğrenci numarası" asp-for="StudentCode"/>
              <span asp-validation-for="StudentCode" class="text-danger small"></span>

          </div>
          <div class="from-group">
              <label for="Email" class="font-weight-bold small">Öğrenci email</label>
              <input type="text" class="form-control" id="Email" placeholder="Öğrenci email" asp-for="Email"/>
              <span asp-validation-for="Email" class="text-danger small"></span>

          </div>

          <div class="from-group">
              <label for="PhoneNumber" class="font-weight-bold small">Öğrenci telefon</label>
              <input type="text" class="form-control" id="PhoneNumber" placeholder="Öğrenci telefon" asp-for=PhoneNumber/>
              <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
          </div>

          <div class="from-group">
              <label for="RegistrationTime" class="font-weight-bold small">Kayıt zamanı</label>
              <input type="date" class="form-control" id="RegistrationTime" placeholder="Kayıt zamanı" asp-for="RegistrationTime"/>
              <span asp-validation-for="RegistrationTime" class="text-danger small"></span>
          </div>

          <div class="from-group">
              <label for="Password" class="font-weight-bold small">Öğrenci şifre</label>
              <input type="password" class="form-control" id="Password" placeholder="Öğrenci şifre" asp-for="Password"/>
              <span asp-validation-for="Password" class="text-danger small"></span>
          </div>
          <div class="from-group">
              <label for="RePassword" class="font-weight-bold small">Öğrenci şifre tekrar</label>
              <input type="password" class="form-control" id="RePassword" placeholder="Öğrenci şifre tekrar" asp-for="RePassword"/>
              <span asp-validation-for="RePassword" class="text-danger small"></span>

          </div>
          <div>
              <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-plus mr-2"></i>Ekle</button>
              <a class="btn btn-secondary btn-sm" asp-action="Index"><i class="fa fa-arrow-left mr-2"></i>Listeye Dön!</a>
          </div>
      </form>
    </div>
</div>