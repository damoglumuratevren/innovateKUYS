@model IEnumerable<CourseStudent>
@{
    ViewData["Title"] = "Ögrenciler";
}
<div class="row mb-4">
    <div class="col">
       @* <a class="btn btn-primary btn-sm" asp-action="Create"><i class="fa fa-plus mr-2"></i>Öğrenci Ekle</a>*@
    </div>
</div>
<div claas="row mb-4">
    <div class="col table-responsive">


<table id="student" class="display" style="width:100%">
        <thead>
            <tr>
                 <th>öğrenci Id</th>
                <th>Ögrenci Ad Soyad</th>
                <th> Ders Adı</th>
                <th>Ders Kodu</th>
                 <th> Ders Dönemi</th>
                <th>Ortalama</th>
                <th class="text-center">Dersi geçti  mi?</th>
                <th class="text-center">Aktif mi?</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
           @foreach (CourseStudent item in Model)  {  
                  
             <tr>
                <td>@item.Student.StudentCode</td>
                <td>@item.Student.FirstName @item.Student.LastName</td>
                <td>@item.Course.CourseName</td>
                <td>@item.Course.CourseCode</td>
                <td>@item.Course.CoursePeriyod</td>
                <td>@item.GradeAverage</td>
                <td class="text-center"><i class="fa fa@(item.IsPassed? "-check text-success":"-times text-danger")"></i></td>
                <td class="text-center"><i class="fa fa@(item.IsActive? "-check text-success":"-times text-danger")"></i></td>                 
                <td class="text-center">
                     <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i> </a>
                      <button type="button" class="btn btn-info btn-sm" data-bs-toggle="modal" onclick="loadStudentDetail(@item.Id)" data-bs-target="#StudentDetay"> <i class="fa fa-search"></i> </button>
                      <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash"></i> </a>
                </td>
            </tr>
            }

        </tbody>
    </table>
        </div>
</div>

